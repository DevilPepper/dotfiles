Include ~/.ssh/config.d/*
CanonicalizeHostname yes
CanonicalDomains lan
IgnoreUnknown UseKeychain
UseKeychain yes
StrictHostKeyChecking yes
UpdateHostKeys no
IdentitiesOnly yes

Match user=git host=*.com,*.org
  HostName %h
  User %r

Match host=*.lan
  HostName %h

Host 1010220
  HostName 10.10.220.1

Host *
  IdentityFile ~/.ssh/255
