CanonicalizeHostname yes
CanonicalDomains lan
IgnoreUnknown UseKeychain
UseKeychain yes
StrictHostKeyChecking yes

Match user=git host=*.com,*.org
  HostName %h
  User %r
  IdentityFile ~/.ssh/backup
  IdentityFile ~/.ssh/keyblade
  IdentitiesOnly yes

Match host=*.lan
  HostName %h
  IdentityFile ~/.ssh/backup
  IdentityFile ~/.ssh/keyblade
  IdentitiesOnly yes

Host 1010220
  HostName 10.10.220.1
  IdentityFile ~/.ssh/backup
  IdentityFile ~/.ssh/keyblade
  IdentitiesOnly yes
